<% provide :title, "Edit user" %>
<h2 class="section-heading">Edit user <%=@user.name%></h2>
<div class="edit-user">
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :name %>
		<%= f.text_field :name %><br />

		<%= f.label :email %>
		<%= f.text_field :email %><br /><br />

		<%= f.label :password %>
		<%= f.password_field :password %><br />

		<%= f.label :password_confirmation, "Confirmation" %>
		<%=f.password_field :password_confirmation %><br /><br />

		<%= f.submit "Save changes", class: "submit_button" %><br /><br />
	<% end %>
	<span class="delete"><%= link_to "Delete this user", confirm_destroy_user_path(@user) %></span>
</div>
